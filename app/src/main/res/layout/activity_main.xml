<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/lorentzcalc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Lorentz Factor Calculator"
        android:textSize="12dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/lorentzprac"/>

    <Button
        android:id="@+id/lorentzprac"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Lorentz Factor Practice session"
        android:textSize="12dp" />

    <Button
        android:id="@+id/spifac"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Spi factor calculator"
        android:textSize="12dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lorentzprac"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nitin's Helper"
        android:layout_above="@id/lorentzcalc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:layout_below="@id/spifac"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="exit"/>

</RelativeLayout>